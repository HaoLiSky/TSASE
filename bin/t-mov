#!/usr/bin/env python

import argparse
import numpy
import tutil

parser = argparse.ArgumentParser()
parser.add_argument("dist", nargs=3, type=float)
args = parser.parse_args()

vector = numpy.array([args.dist[0], args.dist[1], args.dist[2]])

traj = tutil.pipein()

for i in range(len(traj)):
    traj[i].positions += vector

tutil.pipeout(traj)

