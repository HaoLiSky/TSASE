#!/usr/bin/env python

import sys
import ase
import tutil

trajs = []

for fname in sys.argv[1:]:
    traj = ase.io.read(fname, index=":")
    if type(traj) is not list:
        traj = [traj]
    trajs.append(traj)

for i in range(len(trajs[0])):
    for traj in trajs[1:]:
        if len(traj) > i:
            trajs[0][i].extend(traj[i])

tutil.pipeout(trajs[0])

