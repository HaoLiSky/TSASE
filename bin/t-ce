#!/usr/bin/env python

import tutil
import argparse

parser = argparse.ArgumentParser()
parser.add_argument("target")
parser.add_argument("indices", nargs="+", type=int)
args = parser.parse_args()

trj = tutil.pipein()
for atoms in trj:
    for i in args.indices:
        atoms[i].set_symbol(args.target)

tutil.pipeout(trj)

