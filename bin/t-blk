#!/usr/bin/env python

import argparse

from ase.structure import bulk

import tutil

parser = argparse.ArgumentParser()
parser.add_argument("name")
parser.add_argument("structure")
parser.add_argument("-a", dest="a", type=float, default=None)
parser.add_argument("-c", dest="c", type=float, default=None)
parser.add_argument("--covera", dest="covera", type=float)
parser.add_argument("--ortho", dest="ortho", type=bool, default=False)
parser.add_argument("--cubic", dest="cubic", type=bool, default=False)
args = parser.parse_args()

p = bulk(args.name, args.structure, args.a, args.c, args.covera, args.ortho, args.cubic)

tutil.pipeout([p])

