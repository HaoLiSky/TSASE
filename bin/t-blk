#!/usr/bin/env python

import argparse

from ase.structure import bulk

import tutil

parser = argparse.ArgumentParser()
parser.add_argument("name")
parser.add_argument("structure")
parser.add_argument("-a", type=float, default=None)
parser.add_argument("-c", type=float, default=None)
parser.add_argument("--covera", type=float)
parser.add_argument("--ortho", action="store_true", default=False)
parser.add_argument("--cubic", action="store_true", default=False)
args = parser.parse_args()

p = bulk(args.name, args.structure, args.a, args.c, args.covera, args.ortho, args.cubic)

tutil.pipeout([p])

