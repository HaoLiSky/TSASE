#!/usr/bin/env python

import sys

import ase
import tsase

import tutil

traj = tutil.pipein()

try:
    exec("pot = ase.calculators.%s()" % sys.argv[1])
except:
    exec("pot = tsase.calculators.%s()" % sys.argv[1])

for atoms in traj:
    atoms.set_calculator(pot)
    print atoms.get_potential_energy()


